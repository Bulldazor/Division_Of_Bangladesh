<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rangpur"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rr.division_of_bangladesh.RangpurActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/rangpurdistrictsmap"
        android:layout_marginTop="30dp"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="City Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:layout_below="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginTop="39dp"
        android:id="@+id/textView9" />

    <TextView
        android:text="Rangpur"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView10" />

    <TextView
        android:text="City Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="Famous For Some Talented Person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:text="Population: "
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="16dp"
        android:id="@+id/textView13" />

    <TextView
        android:text="15,665,000"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Place That Attracts Most"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Click Here To Know"
        android:layout_width="wrap_content"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textViewRangpur" />
</RelativeLayout>
