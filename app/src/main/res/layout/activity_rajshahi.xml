<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rajshahi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#155f03"
    tools:context="com.example.rr.division_of_bangladesh.RajshahiActivity">

    <TextView
        android:text="Famous For the Crops."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textDescription"
        android:layout_toRightOf="@+id/textDescription"
        android:layout_toEndOf="@+id/textDescription"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <TextView
        android:text="18,484,858."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Rajshahi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/textCityName"
        android:layout_alignBottom="@+id/textCityName"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="City Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:id="@+id/textCityName"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/textViewClickKhulna"
        android:layout_toStartOf="@+id/textViewClickKhulna"
        android:layout_marginTop="29dp" />

    <ImageView
        android:layout_width="180dp"
        app:srcCompat="@drawable/mapofrajdivruralbd"
        android:id="@+id/imageView2"
        android:layout_height="180dp"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Population: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textDescription"
        android:layout_alignLeft="@+id/textCityName"
        android:layout_alignStart="@+id/textCityName"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Place That May Interest the Tourist: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="Click Here To Find Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/textViewClickKhulna"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="City Type: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:id="@+id/textDescription"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textCityName"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />
</RelativeLayout>
