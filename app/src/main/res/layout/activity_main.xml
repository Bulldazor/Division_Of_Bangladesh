<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   >

    <TextView
        android:text="Welcome To Bangladesh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:id="@+id/textView"

        android:textSize="30dp"
        android:shadowColor="@android:color/darker_gray"
        android:textColor="@android:color/holo_blue_dark"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--android:layout_marginTop="27dp" />-->

    <Button
        android:text="Barisal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/buttonBarsial"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@drawable/round_corner"
        android:alpha="0.89"
        android:textAlignment="center"
        android:drawableLeft="@drawable/wrestling"
        android:textColor="@android:color/white"
        android:layout_above="@+id/buttonRangpur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:text="Sylhet"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/buttonSylht"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@drawable/round_corner"
        android:alpha="0.89"
        android:textAlignment="center"
        android:drawableLeft="@drawable/coffeecup"
        android:textColor="@android:color/white"
        android:layout_above="@+id/buttonBarsial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:text="Rajshahi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_corner"
        android:textAlignment="center"
        android:drawableLeft="@drawable/mosque"
        android:alpha="0.89"
        android:layout_marginTop="15dp"
        android:id="@+id/buttonRajshahi"
        android:layout_above="@+id/buttonSylht"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:text="Dhaka"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/aa"
        android:textAlignment="center"
        android:id="@+id/buttonDhaka"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@drawable/round_corner"
        android:alpha="0.89"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Rangpur"
        android:layout_width="match_parent"
        android:id="@+id/buttonRangpur"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@drawable/round_corner"
        android:alpha="0.89"
        android:textAlignment="center"
        android:drawableLeft="@drawable/tmple"
        android:textColor="@android:color/white"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Chittagong"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:alpha="0.89"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@drawable/round_corner"
        android:drawableLeft="@drawable/se"
        android:id="@+id/buttonCtg"
        android:layout_below="@+id/buttonDhaka"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <Button

        android:text="Khulna"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_corner"
        android:textAlignment="center"
        android:alpha="0.89"
        android:drawableLeft="@drawable/khulna"
        android:id="@+id/buttonkhulna"
        style="@style/Widget.AppCompat.Button"
        android:layout_above="@+id/buttonRajshahi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

</RelativeLayout>
