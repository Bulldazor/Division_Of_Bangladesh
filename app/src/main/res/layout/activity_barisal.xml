<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_barisal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#3e3f63"
    tools:context="com.example.rr.division_of_bangladesh.BarisalActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/barisal"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="City Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginTop="43dp"
        android:id="@+id/textView21" />

    <TextView
        android:text="Barisal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textView21"
        android:layout_toRightOf="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:id="@+id/textView22" />

    <TextView
        android:text="Population: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:layout_below="@+id/textView23"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_marginTop="22dp"
        android:id="@+id/textView25" />

    <TextView
        android:text="8,147,000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView26"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/textView25"
        android:layout_alignBottom="@+id/textView25"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignStart="@+id/textView24" />

    <TextView
        android:text="Place That Might Interest You"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp"
        android:layout_below="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/textView27" />

    <TextView
        android:text="For The Fish Of River Meghna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:id="@+id/textView24"
        android:layout_alignTop="@+id/textView23"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Click Here To find Out"
        android:layout_width="wrap_content"
        android:textSize="18sp"

        android:textColor="@android:color/holo_blue_bright"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBar"
        android:layout_below="@+id/textView27"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="Famous For? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21" />
</RelativeLayout>
