<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dhaka"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#217c"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rr.division_of_bangladesh.DhakaActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"

        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/dhakacitycorporation" />

    <TextView
        android:text="City Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:textColor="#8C3B21"
        android:textSize="15sp"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:layout_marginTop="45dp"
        android:id="@+id/textCityName" />

    <TextView
        android:text="City Type:: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCityName"
        android:textColor="#8C3B21"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/textCityName"
        android:layout_alignStart="@+id/textCityName"
        android:layout_marginTop="20dp"
        android:id="@+id/textDescription" />

    <TextView
        android:text="Capital of Bangladesh."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textDescription"
        android:layout_toRightOf="@+id/textDescription"
        android:layout_toEndOf="@+id/textDescription"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <TextView
        android:text="Population: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8C3B21"
        android:textSize="15sp"
        android:layout_below="@+id/textDescription"
        android:layout_alignLeft="@+id/textDescription"
        android:layout_alignStart="@+id/textDescription"
        android:layout_marginTop="20dp"
        android:id="@+id/textView6" />

    <TextView
        android:text="14.54 million"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Dhaka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/textCityName"
        android:layout_alignBottom="@+id/textCityName"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Place That May Interest the Tourist: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8C3B21"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="Click Here To Find Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/textViewClick"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
