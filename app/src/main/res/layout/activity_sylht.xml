<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sylht"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#0b0c3b"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rr.division_of_bangladesh.SylhtActivity">

    <TextView
        android:text="City Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:layout_below="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="27dp"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/syhlt"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Sylhet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <TextView
        android:text="Famous For? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="15dp"
        android:id="@+id/textView16" />

    <TextView
        android:text="Have Some Tourist Spot there which is famous all over the world."
        android:layout_width="wrap_content"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView17" />

    <TextView
        android:text="Population: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAB282"
        android:textSize="15sp"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="19dp"
        android:id="@+id/textView18" />

    <TextView
        android:text="10 million"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:id="@+id/textView19" />

    <TextView
        android:text="Place That Interest Most "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textColor="#f05f30"
        android:textSize="15sp"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Click Here To Know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:id="@+id/textViewSylhtView"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
